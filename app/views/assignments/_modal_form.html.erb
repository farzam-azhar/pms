<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><%= modal_form_header(object) %> Assignment</h4>
    </div>
    <div class="modal-body">
      <div id="assignment-error"></div>

      <%= simple_form_for [project, object], remote: true do |f| %>
        <%= f.association :user, collection: render_users(object, project), input_html: { required: true }, prompt: 'Select User' %>
        <%= f.input :role, as: :select, collection: Assignment.roles.keys, label_method: lambda { |role| role.humanize }, include_blank: 'Select Role', input_html: { required: true } %>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
