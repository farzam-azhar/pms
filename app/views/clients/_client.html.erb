<div class="col-md-4 mb-5" id="client-<%= client.id %>">
  <div class="card unset-height">
    <div class="card-container">
      <div id="icons" class="pull-right mt-4">
        <%= render 'links', client: client if valid_role? %>
      </div>
      <h4><b><%= client.name %></b></h4> 
      <p><%= client.email %></p>
      <p><%= client.country_name %></p> 
    </div>
    <a href="<%= client_path(client) %>" class="btn btn-info btn-sm btn-block">Details</a>
  </div>
</div>
