<% if @check %>
  $('#myModal').modal('toggle')
  $("#client_<%= @client.id %>").fadeOut(200).fadeIn(500, function(){
    $(this).replaceWith("<%= j render @client %>")
  });
<% else %>
  $('#client_error').empty()
  $('#client_error').append("<%= j render 'shared/errors', resource: @client, resource_name: 'Client' %>")
<% end %>
