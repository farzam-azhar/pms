<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><%= modal_form_header(object) %> Payment</h4>
    </div>
    <div class="modal-body">
      <div id="payment-error"></div>

      <%= simple_form_for [project, object], remote: true do |f| %>
        <%= f.input :amount, input_html: { required: true, placeholder: 'Enter Payment', min: 0 } %>
        <%= f.input :method, as: :select, collection: Payment.methods.keys, include_blank: 'Select Payment Method', input_html: { required: true } %>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
