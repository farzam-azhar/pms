<div class="ml-10">
  <%= link_to [:edit, project, payment], remote: true, data: { toggle: "tooltip" }, title: 'Edit Payment', class: 'green-color' do %>
    <span class="glyphicon glyphicon-edit"></span>
  <% end %>

  <%= link_to '&times;'.html_safe, [project, payment], method: :delete, class: 'close crimson-color no-float', data: { dismiss: "alert", toggle: "tooltip", confirm: 'Are you sure?' }, title: 'Remove Payment', aria: { label: "close" }, remote: true %>
</div>
