<div class="container">
  <div class="row">
    <div class="col-md-offset-4">
      <h1>Our Top Projects</h1>
    </div>
  </div>

  <div class="row mt-4">
    <%= render partial: 'project', collection: @top_projects %>
  </div>
  <hr />

  <div class="row">
    <div class="col-md-offset-4">
      <h1>Our Bottom Projects</h1>
    </div>
  </div>

  <div class="row mt-4">
    <%= render partial: 'project', collection: @bottom_projects %>
  </div>
  <hr />

  <div class="row">
    <div class="col-md-offset-3">
      <h1>Current Month Projects Earnings</h1>
    </div>
  </div>

  <div class="row mt-4">
    <%= line_chart charts_current_month_earnings_path, xtitle: "Project", ytitle: "Earnings", adapter: 'highcharts', refresh: 60 %>
  </div>
  <hr />

  <div class="row">
    <div class="col-md-offset-3">
      <h1>Current Month Projects Hours Logged</h1>
    </div>
  </div>

  <div class="row mt-4">
    <%= line_chart charts_current_month_time_logs_path, xtitle: "Project", ytitle: "Hours", adapter: 'highcharts', refresh: 60 %>
  </div>
  <hr />

  <div class="row">
    <div class="col-md-offset-3">
      <h1> Our By Month Earnings of Projects</h1>
    </div>
  </div>

  <div class="row mt-4">
    <%= column_chart charts_by_month_earnings_path, xtitle: "Month", ytitle: "Earnings", adapter: 'highcharts', refresh: 60 %>
  </div>
  <hr />

  <div class="row">
    <div class="col-md-offset-3">
      <h1> Our By Month Hours Logged of Projects</h1>
    </div>
  </div>

  <div class="row mt-4">
    <%= column_chart charts_by_month_logs_path, xtitle: "Month", ytitle: "Hours", adapter: 'highcharts', refresh: 60 %>
  </div>
  <hr />
</div>
