<div class="container">
  <div class="row">
    <div class="ml-1">
      <h1 class="pull-left"><%= @project.title %></h1>
      <%= link_to 'Download PDF', project_path(@project, format: :pdf), target: '_blank', class: 'pull-right btn btn-default mrt-1 mr-1' %>
    </div>
  </div>

  <div class="card unset-height">
    <div class="card_container custom-padding">
      <div id="icons" class="pull-right mt-4">
      </div>
      <div class="row mb-1">
        <div class="col-md-3">
          <p class="first-p">Estimated Price</p>
          <p class="second-p"><%= @project.estimated_price %> USD</p>
        </div>

        <div class="col-md-3">
          <p class="first-p">Time Frame</p>
          <p class="second-p"><%= time_ago_in_words(@project.end_date).capitalize %></p>
        </div>

        <div class="col-md-3">
          <p class="first-p">Client</p>
          <p class="second-p"><%= @project.client.name %></p>
        </div>

        <div class="col-md-2">
          <p class="first-p">Started at </p>
          <p class="second-p"><%= @project.created_at.strftime("%m-%d-%Y") %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-10">
          <p class="first-p">Description</p>
          <p class="second-p"><%= raw @project.description %></p>
        </div>
      </div>

      <hr />
      <div class="row">
        <div class="col-md-10">
          <p class="first-p">Attachments</p>
          <div class="mt-4">
            <p class="second-p"> <%= project_attachments(@project) %> </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr />

  <%= render 'associated_tables' %>

  <div id="payment-modal" class="modal fade" role="dialog"></div>
  <div id="assignment-modal" class="modal fade" role="dialog"></div>
  <div id="comment-modal" class="modal fade" role="dialog"></div>

</div>
