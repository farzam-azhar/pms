          <tr>
            <th>Username</th>
            <th class="w-20">Email</th>
            <th>Gender</th>
            <th class="w-20">Contact</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
      </table>
    </div>
  </div>
</div>
